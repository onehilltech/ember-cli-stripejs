<h4>Card</h4>

<h4>Bank account</h4>

<form {{on "submit" this.saveBankAccount}}>
  <Input placeholder="Routing number" @value={{this.routingNumber}} />
  <Input placeholder="Account number" @value={{this.accountNumber}} />
  <Input @type="submit" @value="Save" />
</form>

<div style="margin-top: 16px">
  {{#if this.bankAccountToken.isSaving}}
    Creating bank account token...
  {{else if this.bankAccountToken.isValid}}
    <table>
      <tr><td>Id:</td><td>{{this.bankAccountToken.id}}</td></tr>
      <tr><td>Routing number:</td><td>{{this.bankAccountToken.routingNumber}}</td></tr>
      <tr><td>Account number:</td><td>********{{this.bankAccountToken.last4}}</td></tr>
      <tr><td>Bank name:</td><td>{{this.bankAccountToken.bankName}}</td></tr>
      <tr><td>Status:</td><td>{{this.bankAccountToken.status}}</td></tr>
      <tr><td>&nbsp;</td><td>&nbsp;</td></tr>
      <tr><td>Country:</td><td>{{this.bankAccountToken.country}}</td></tr>
      <tr><td>Currency:</td><td>{{this.bankAccountToken.currency}}</td></tr>
      <tr><td>&nbsp;</td><td>&nbsp;</td></tr>
      <tr><td>Account holder name:</td><td>{{this.bankAccountToken.accountHolderName}}</td></tr>
      <tr><td>Account holder type:</td><td>{{this.bankAccountToken.accountHolderType}}</td></tr>

    </table>
  {{/if}}
</div>
